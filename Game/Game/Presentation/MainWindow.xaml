<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        WindowStyle="None"
        x:Name="wndMain"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="Louder" Height="600" Width="800" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!--Main window-->
                        <Grid>
                            <!--Opacity Mask for Corner-->
                            <Border x:Name="Container" Background="{StaticResource BackgroundLightBrush}" CornerRadius="{Binding WindowCornerRadius, FallbackValue=10}" />
                            <Border Background="{Binding ForegroundLightBrush, FallbackValue=White}">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <!--Title Bar-->
                                    <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=42}"/>

                                    <!--Window Contents-->
                                    <RowDefinition Height="*"/>

                                </Grid.RowDefinitions>
                                <!--Title Bar-->
                                <Grid Grid.Column="0" Panel.ZIndex="1">
                                    <Grid.ColumnDefinitions>
                                        <!--Icon-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--Title-->
                                        <ColumnDefinition Width="*"/>
                                        <!--Button-->
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Icon-->
                                    <Button Style="{StaticResource SystemIconButton}">
                                        <Image Source="/Images/Logo/135077.png"/>
                                    </Button>

                                    <!--Title-->
                                    <Viewbox Grid.Column="0" Grid.ColumnSpan="3" Margin="5">
                                        <StackPanel>
                                            <TextBlock FontFamily="Arial">
                                                    <Run Text="L" Foreground="{StaticResource LetterOrangeBrush}"/><Run Text="O" Foreground="{StaticResource LetterOrangeBrush}"/><Run Text="U" Foreground="{StaticResource LetterOrangeBrush}"/><Run Text="D" Foreground="{StaticResource LetterOrangeBrush}"/><Run Text="E" Foreground="{StaticResource LetterOrangeBrush}"/><Run Text="R" Foreground="{StaticResource LetterOrangeBrush}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Viewbox>

                                    <!--Window Buttons-->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Command="{Binding MinimizeWindow}" Style="{StaticResource WindowControlButton}" Content="_"/>
                                        <Button Command="{Binding CloseWindow}" Style="{StaticResource WindowCloseButton}" Content="X"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Page content -->
                                <Border Grid.Row="1" Padding="{Binding InnerContentPadding}">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/Background/background6.jpg"/>
                                    </Border.Background>
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:AppPageValueConverter}}"/>
    </Grid>
</Window>

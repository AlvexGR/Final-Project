<Page x:Class="Game.Presentation.Pages.Result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Result">

    <StackPanel>
        <Grid Height="600">
            <StackPanel Margin="100 100 100 150">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="50" FontSize="90" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Leaderboard or History/star.png" Margin="0 20 20 0"/>
                            <Image Source="/Images/Leaderboard or History/star.png" Margin="0 20 20 0" Grid.Column="1"/>
                            <Image Source="/Images/Leaderboard or History/star.png" Margin="0 20 20 0" Grid.Column="2"/>
                            <Image Source="/Images/Leaderboard or History/star.png" Margin="0 20 20 0" Grid.Column="3"/>
                            <Image Source="/Images/Leaderboard or History/star.png" Margin="0 20 20 0" Grid.Column="4"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                

            </StackPanel>
            <Button Style="{StaticResource BackButton}" x:Name="btnGoBack" Click="btnGoBack_Click"  Command="{Binding PreviousCommand}" HorizontalAlignment="Left" Margin="80,450,0,0" VerticalAlignment="Top" Width="70" Height="70" FontSize="18">
                <Image x:Name="imgBackButton" Source="/Images/Button/back_button.png" MouseEnter="imgBackButton_MouseEnter" MouseLeave="imgBackButton_MouseLeave"/>
            </Button>
        </Grid>
    </StackPanel>
</Page>

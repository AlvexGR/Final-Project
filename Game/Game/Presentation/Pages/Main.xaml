<Page x:Class="Game.Presentation.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Main">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Margin="20 80 50 0">
                <Button Content="THEO CHU DE" Margin="0 0 0 50" Height="65"/>
                <Button Content="THEO CHU DE" Margin="0 0 0 50" Height="65"/>
                <Button Content="THEO CHU DE" Margin="0 0 0 50" Height="65"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0 0 2 0">
                        <Button Content="THEO CHU DE" Height="30" Margin="0 0 0 5"/>
                        <Button Content="THEO CHU DE" Height="30"/>
                    </StackPanel>
                    <Button x:Name="btnExit" Content="THOAT" Grid.Column="1"  Margin="2 0 0 0" Height="65"/>
                </Grid>

            </StackPanel>
        </Grid>
    </StackPanel>
</Page>

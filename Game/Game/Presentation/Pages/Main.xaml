<local:BasePage x:TypeArguments="viewModel:MainViewModel"  x:Class="Game.Presentation.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Presentation.Pages"
      xmlns:viewModel="clr-namespace:Game.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Main">

    <StackPanel>
        <Grid Height="570">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0 80 0 110" Grid.Column="1">
                <Button Style="{StaticResource NormalButton}" x:Name="btnTheme" Command="{Binding ThemeCommand}" Content="CHƠI" Margin="0 0 0 40" Height="65" FontSize="18" FontFamily="Arial" Click="btnTheme_Click"/>
                <Button Style="{StaticResource NormalButton}" x:Name="btnNoThemes" Command="{Binding NoThemeCommand}" Content="TUỲ CHỌN" Margin="0 0 0 40" Height="65" FontSize="18" FontFamily="Arial" Click="btnNoThemes_Click"/>
                <Button Style="{StaticResource NormalButton}" x:Name="btnVocabularyList" Command="{Binding VocabularyListCommand}" Content="TỪ VỰNG" Margin="0 0 0 40" Height="65" FontSize="18" FontFamily="Arial" Click="btnVocabularyList_Click"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0 0 2 0">
                        <Button Style="{StaticResource NormalButton}" Command="{Binding HistoryCommand}" x:Name="btnHistory" Content="LỊCH SỬ" Height="30" Margin="0 0 0 5" FontSize="14" FontFamily="Arial" Click="btnHistory_Click"/>
                        <Button Style="{StaticResource NormalButton}" Command="{Binding SettingCommand}" x:Name="btnSetting" Content="CÀI ĐẶT" Height="30" FontSize="14" FontFamily="Arial" Click="btnSetting_Click"/>
                    </StackPanel>
                    <Button Style="{StaticResource NormalButton}" x:Name="btnExit" Content="THOÁT" Grid.Column="1"  Margin="2 0 0 0" Height="65" FontSize="18" Click="btnExit_Click" FontFamily="Arial"/>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="4" Margin="0 200 0 0">
                <Button Style="{StaticResource SettingsButton}" Margin="0 0 0 20" />
                <Button Style="{StaticResource HistoryButton}"/>
            </StackPanel>


        </Grid>
    </StackPanel>
</local:BasePage>

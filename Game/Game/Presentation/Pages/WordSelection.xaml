<local:BasePage x:TypeArguments="viewModel:WordSelectionViewModel" x:Class="Game.Presentation.Pages.WordSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Presentation.Pages"
      xmlns:viewModel="clr-namespace:Game.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="WordSelection">

    <StackPanel>
        <Grid Height="600">
            <StackPanel Margin="280 80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tìm kiếm:" Grid.Column="0"/>
                    <TextBox Grid.Column="1"/>
                </Grid>
                <ListBox Margin="0 10 0 0" Padding="10 5" Height="412">
                    <ListBoxItem>
                        <CheckBox>
                            <TextBlock Text="Cat" Margin="5 0"/>
                        </CheckBox>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox>
                            <TextBlock Text="Cat" Margin="5 0"/>
                        </CheckBox>
                    </ListBoxItem>
                    <ListBoxItem>
                        <CheckBox>
                            <TextBlock Text="Cat" Margin="5 0"/>
                        </CheckBox>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
            <Button Style="{StaticResource BackButton}" x:Name="btnGoBack" Click="btnGoBack_Click"  Command="{Binding PreviousCommand}" HorizontalAlignment="Left" Margin="80,450,0,0" VerticalAlignment="Top" Width="70" Height="70" FontSize="18">
                <Image x:Name="imgBackButton" Source="/Images/Button/back_button.png" MouseEnter="imgBackButton_MouseEnter" MouseLeave="imgBackButton_MouseLeave"/>
            </Button>
            <Button x:Name="btnNext" Click="btnNext_Click"  Command="{Binding PlayOptionsCommand}" Style="{StaticResource NextButton}" Content="TIẾP THEO" HorizontalAlignment="Left" Margin="626,450,0,0" VerticalAlignment="Top" Width="109" Height="70" FontSize="18"/>
        </Grid>
    </StackPanel>
</local:BasePage>

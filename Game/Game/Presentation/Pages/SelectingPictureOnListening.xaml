<Page x:Class="Game.Presentation.Pages.SelectingPictureOnListening"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SelectingPictureOnListening">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>
    <StackPanel>
        <Grid Height="600">
            <StackPanel Margin="170 80 170 100">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button>
                        <Image Source="/Images/Background/background.jpg" Width="300" Height="150" />
                    </Button>
                    <Button  Grid.Column="1">
                        <Image Source="/Images/Background/background.jpg" Width="300" Height="150"/>
                    </Button>
                    
                </Grid>
                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button>
                        <Image Source="/Images/Background/background.jpg" Width="300" Height="150" />
                    </Button>
                    <Button  Grid.Column="1">
                        <Image Source="/Images/Background/background.jpg" Width="300" Height="150"/>
                    </Button>
                </Grid>
                <Button Width="40" Height="40" HorizontalAlignment="Center" Margin="0 20">
                    <Image Source="/Images/Button/audio.png"/>
                </Button>

            </StackPanel>
            <!--<Button x:Name="btnNext" Click="btnNext_Click"  Command="{Binding PlayOptionsCommand}" Style="{StaticResource NormalButton}" Content="TIẾP THEO" HorizontalAlignment="Left" Margin="626,450,0,0" VerticalAlignment="Top" Width="109" Height="70" FontSize="18"/>-->
        </Grid>
    </StackPanel>
</Page>
